<CustomLabel@Label>
    valign: "middle"
    font_size: 24
    color: 0, 0, 0, 1
    size_hint: .2, .2
    pos_hint: {'x': .4}

<CustomButton@Button>
    valign: "middle"
    font_size: 24
    background_color: 0, 0.5, 1, 0.5
    size_hint: .2, .2
    pos_hint: {'x': .4}
    
<CustomBoxLayout@BoxLayout>
    orientation: 'vertical'
    size: self.parent.size
    pos: self.parent.pos
    
<CustomCheckBox@CheckBox>
    valign: "middle"
    size_hint: .2, .2
    pos_hint: {'x': .4}
    background_color: 0, 0.5, 1, 0.5
    color: 0, 0, 1, 0.5

WindowManager:
    MainWindow:
    SecondWindow:
    ThirdWindow:
    
    
<MainWindow>:
    name: "main"
    
    CustomBoxLayout:
        CustomLabel:
            text: "Disease Prediction by Symptoms"
        CustomButton:
            text: "Start"
            on_release: 
                app.root.current = "second"
                root.manager.transition.direction = "left"
                
        CustomBoxLayout:
            orientation: 'horizontal'
            
            CustomButton:
                text: "Home"
                
            CustomButton:
                text: "Statistics"
                
    
<SecondWindow>:
    name: "second"
    answer1: answer1
    answer2: answer2
    answer3: answer3
    
    
    CustomBoxLayout:
        CustomLabel:
            text: "Question #1"
            font_size: 24
            color: 0, 0, 0, 1
            
        CustomBoxLayout:
            CustomBoxLayout:
                orientation: "horizontal"
                CustomLabel:
                    text: "Answer #1"
                
                CustomCheckBox:
                    id: answer1
                    
            CustomBoxLayout:
                orientation: "horizontal"
                CustomLabel:
                    text: "Answer #2"
                
                CustomCheckBox:
                    id: answer2
                    
            CustomBoxLayout:
                orientation: "horizontal"
                CustomLabel:
                    text: "Answer #3"
                
                CustomCheckBox:
                    id: answer3
                
        CustomBoxLayout:
            orientation: 'horizontal'
            CustomButton:
                text: "Go Back"
                on_release: 
                    app.root.current = "main"
                    root.manager.transition.direction = "right"
                    
            CustomButton:
                text: "Next"
                on_release: 
                    app.root.current = "third"
                    root.manager.transition.direction = "left" 
        
            
<ThirdWindow>:
    name: "third"
    
    
        