<CustomLabel@Label>
    valign: "middle"
    halign: "center"
    color: 0, 0, 0, 1
    size_hint: .2, .2
    pos_hint: {'x': .4}
    font_size: 18
    padding: 1, 25
    markup: True
    text_size: cm(6), cm(4)

<CustomButton@Button>
    valign: "middle"
    background_color: 0.35, 0.80, 0.40, 0.5
    size_hint: .2, .2

    
<CustomBoxLayout@BoxLayout>
    orientation: 'vertical'
    size: self.parent.size
    pos: self.parent.pos
    
<CustomCheckBox@CheckBox>
    valign: "middle"
    size_hint: .2, .2
    pos_hint: {'x': .4}
    background_color: 0, 0.5, 1, 0.5
    color: 0, 0, 1, 0.5

WindowManager:
    FirstWindow:
    SecondWindow:
    ThirdWindow:
    FourthWindow:
    FifthWindow:
    SixthWindow:
    SeventhWindow:
    EighthWindow:
    NinthWindow:
    FinalWindow:
    
<FirstWindow>:
    name: "main"

    CustomBoxLayout:
        CustomLabel:
            text: "Disease Prediction by Symptoms"
            pos_hint: {'center_x': .5}

        Image:

            source: 'Logo.png'
            size: self.texture_size

        AnchorLayout:
            CustomButton:
                text: "Start"
                size_hint: .2, .2
                pos_hint: {'y': .3}
                on_release:
                    app.root.current = "second"
                    root.manager.transition.direction = "left"
                
    
<SecondWindow>:
    name: "second"
    answer1: answer1
    answer2: answer2
    answer3: answer3
    answer4: answer4
    answer5: answer5
    answer6: answer6

    
    CustomBoxLayout:
        CustomLabel:
            text: "Do you experience the following symptoms?"
            color: 0, 0, 0, 1
            
        CustomBoxLayout:
            CustomBoxLayout:
                orientation: "horizontal"
                CustomLabel:
                    text: str(root.print_symptom(0))

                CustomCheckBox:
                    id: answer1
                    
            CustomBoxLayout:
                orientation: "horizontal"
                CustomLabel:
                    text: str(root.print_symptom(1))
                
                CustomCheckBox:
                    id: answer2
                    
            CustomBoxLayout:
                orientation: "horizontal"
                CustomLabel:
                    text: str(root.print_symptom(2))
                
                CustomCheckBox:
                    id: answer3

            CustomBoxLayout:
                orientation: "horizontal"
                CustomLabel:
                    text: str(root.print_symptom(3))

                CustomCheckBox:
                    id: answer4

            CustomBoxLayout:
                orientation: "horizontal"
                CustomLabel:
                    text: str(root.print_symptom(4))

                CustomCheckBox:
                    id: answer5

            CustomBoxLayout:
                orientation: "horizontal"
                CustomLabel:
                    text: str(root.print_symptom(5))

                CustomCheckBox:
                    id: answer6

        CustomBoxLayout:
            orientation: 'horizontal'
            CustomButton:
                text: "Go Back"
                on_release: 
                    app.root.current = "main"
                    root.manager.transition.direction = "right"
                on_press:
                    root.set_value(0, answer1.active)
                    root.set_value(1, answer2.active)
                    root.set_value(2, answer3.active)
                    root.set_value(3, answer4.active)
                    root.set_value(4, answer5.active)
                    root.set_value(5, answer6.active)
                    
            CustomButton:
                text: "Next"
                on_release: 
                    app.root.current = "third"
                    root.manager.transition.direction = "left"
                    
                on_press:
                    root.set_value(0, answer1.active)
                    root.set_value(1, answer2.active)
                    root.set_value(2, answer3.active)
                    root.set_value(3, answer4.active)
                    root.set_value(4, answer5.active)
                    root.set_value(5, answer6.active)
        
            
